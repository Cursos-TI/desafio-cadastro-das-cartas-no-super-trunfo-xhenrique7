#include <stdio.h>
#include <string.h>

int main() {
//DADOS CARTA 1 
char estado1;
char codigo1[4];
char nomecidade1[100];
int populaçao1;
float area1;
float pib1;
int numeros1;

//DADOS CARTA 2

char estado3;
char codigo2[4];
char nomecidade2[100];
int populaçao2;
float area2;
float pib2;
int numeros2; 

// ENTRADA DE DADOS

printf("LETRA DA CARTA 1 : \n");
printf("Estado (A-H): ");
scanf("%c", &estado1);

printf("Código carta (EX A04): \n");
scanf("%s", codigo1);

printf("Nome cidade: \n");
scanf("%s",nomecidade1);

printf("População: ");
scanf("%d", &populaçao1);

printf("Área em (KM²): ");
scanf("%f", &area1);

printf("PIB: ");
scanf("%f", &pib1);

printf("Número de Pontos Turísticos: ");
scanf("%d", &numeros1);

// Entrada de dados carta2

printf("LETRA DA CARTA 2 : \n");
printf("Estado (A-H): ");
scanf("%c",&estado3);

printf("Código carta (EX A04): \n");
scanf("%s", codigo2);

printf("Nome cidade: \n");
scanf("%s",nomecidade2);

printf("População: ");
scanf("%d", &populaçao2);

printf("Área em (KM²) :   ");
scanf("%f", &area2);

printf("PIB: ");
scanf("%f", &pib2);

printf("Número de Pontos Turísticos: ");
scanf("%d", &numeros2);

// SAÍDA DE DADOS

printf("\n ");
printf("Carta 1 \n");
printf("Estado : %c\n ", estado1);
printf("Código : %s\n ", codigo1);
printf("Cidade :%s\n", nomecidade1);
printf("população :%f\n ", area1);
printf("PIB: %.2f\n", pib1);
printf("Pontos turísticos: %d\n", numeros1);

printf("\n ");
printf("Carta 2 \n");
printf("Estado : %c\n ", estado2);
printf("Código : %s\n ", codigo2);
printf("Cidade :%s\n", nomecidade2);
printf("população :%f\n ", area2);
printf("PIB: %.2f\n", pib2);
printf("Pontos turísticos: %d\n", numeros2);

return 0;   
}
